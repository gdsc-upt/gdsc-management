<MudTooltip Arrow="true" Text="@Tooltip" Color="Color.Primary">
    <MudButton
        Disabled="@Disabled"
        Variant="Variant.Filled"
        Color="Color.Primary"
        IconColor="Color.Surface"
        StartIcon="fa-solid fa-square-arrow-up-right"
        DisableElevation="true"
        Href="@Href">
        @Text
    </MudButton>
</MudTooltip>


@code {

    [Parameter, EditorRequired]
    public string Text { get; set; } = null!;

    [Parameter]
    public string? Tooltip { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public string? Href { get; set; }

}
